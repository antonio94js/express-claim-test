{
  "name": "dealsyte-test",
  "version": "1.0.0",
  "description": "A code challenge",
  "main": "server.js",
  "author": "Antonio Mejias <antoniomejiasv94@gmail.com>",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon server.js --exec babel-node --require dotenv/config",
    "build": "babel . --ignore node_modules -d dist",
    "serve": "node dist/server.js",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:seeds": "node_modules/.bin/sequelize db:seed:all",
    "db:rollback": "NODE_ENV=test node_modules/.bin/sequelize db:migrate:undo:all",
    "pretest": "node_modules/.bin/sequelize db:migrate &&",
    "test:unit": "mocha -R spec --compilers js:babel-core/register ./test/unit/**/*.js",
    "test:integration": "export NODE_ENV=test && npm run db:rollback && npm run db:migrate && npm run db:seeds && mocha -R spec --compilers js:babel-core/register ./test/integration/**/*.js "
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.7.1",
    "pg-hstore": "^2.3.2",
    "ramda": "^0.26.1",
    "require-all": "^3.0.0",
    "sequelize": "^4.41.2",
    "sequelize-cli": "^5.4.0",
    "sinon-express-mock": "^2.1.0",
    "supertest": "^3.3.0",
    "uuid": "^3.3.2",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai-arrays": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.4",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.3.0"
  }
}
